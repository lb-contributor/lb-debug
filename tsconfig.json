{
  "compilerOptions": {
    "strictNullChecks": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "target": "es5",
    "declaration": true,
    "lib": [
      "dom",
      "es7"
    ],
    "module": "commonJS",
    "outDir": "lib",
  },
  "include": [
    "index.ts"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}
